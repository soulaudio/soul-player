{
  "name": "soul-player",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "applications/shared",
    "applications/desktop",
    "applications/mobile",
    "applications/marketing"
  ],
  "scripts": {
    "dev:desktop": "yarn workspace soul-player-desktop tauri:dev",
    "dev:mobile": "yarn workspace soul-player-mobile tauri:dev",
    "dev:marketing": "yarn workspace @soul-player/marketing dev",
    "dev:server": "docker compose up --build",
    "dev:server:down": "docker compose down",
    "dev:server:logs": "docker compose logs -f server",
    "dev:server:clean": "docker compose down -v",
    "build:desktop": "yarn workspace soul-player-desktop tauri:build",
    "build:mobile": "yarn workspace soul-player-mobile tauri:build",
    "build:marketing": "yarn workspace @soul-player/marketing build",
    "test": "yarn workspaces foreach run test",
    "lint": "yarn workspaces foreach run lint",
    "type-check": "yarn workspaces foreach run type-check"
  },
  "packageManager": "yarn@4.0.2",
  "engines": {
    "node": ">=20.0.0"
  }
}
